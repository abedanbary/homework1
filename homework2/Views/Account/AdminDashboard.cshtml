@model List<homework2.Models.User>
@{
    ViewData["Title"] = "لوحة التحكم - المدير";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">📋 جميع المستخدمين في النظام</h2>

    <table class="table table-bordered table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>First Name</th>
                <th>Last Name</th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                   \
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a class="btn btn-outline-secondary" asp-action="Logout">تسجيل الخروج</a>
    </div>
</div>
